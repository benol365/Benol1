from flask import Flask, render_template

app = Flask(__name__)

# Home page route
@app.route('/')
def home():
    return render_template('home.html', title="Benol Academy")

# About page route
@app.route('/about')
def about():
    return render_template('about.html', title="About Benol Academy")

# Courses page route
@app.route('/courses')
def courses():
    return render_template('courses.html', title="Courses")

if __name__ == "__main__":
    app.run(debug=True)
